@model IEnumerable<CarServiceModel>

@{
    ViewBag.Title = "Cars Administration";
}

<h1>All Cars</h1>

<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Brand</th>
      <th scope="col">Model</th>
      <th scope="col">Year</th>
      <th scope="col">Category</th>
      <th scope="col">Approved</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var car in Model)
        {
            <tr>
                <td scope="col">@car.Id</td>
                <td scope="col">@car.Brand</td>
                <td scope="col">@car.Model</td>
                <td scope="col">@car.Year</td>
                <td scope="col">@car.CategoryName</td>
                <td scope="col">@(car.IsPublic ? "Yes" : "No")</td>
                <td scope="col">                                  
                    <a asp-area= "" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" asp-route-information="@car.GetInformation()" class="btn btn-primary">View More</a>
                    <a asp-area= "Admin" asp-controller="Cars" asp-action="ChangeVisibility" asp-route-id="@car.Id" class="btn btn-info">@(car.IsPublic ? "Hide" : "Approve")</a>     
                    <a asp-area= "" asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>     
                    <a asp-area= "" asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
  </tbody>
</table>
@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

@{
    var cars = Model.Cars;
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count > 1 ? cars[1] : null;
    var thirdCar = cars.Count > 2 ? cars[2] : null;
}

@*<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>*@

<div class="row">
    @if (!cars.Any())
    {
        <div class="container mt-3">
            @*<h2>Welcome to car renting best place in the net!</h2>
                <p>There are no cars in the sysytem yet.</p>*@
            <div class="mt-4 p-5 bg-primary text-white rounded">
                <h1>Welcome to car renting best place in the net!</h1>
                <p>There are no cars in the sysytem yet.</p>
                <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
            </div>
        </div>
    }
    else
    {
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                @if (firstCar != null)
                {
                    <div class="carousel-item active">
                        <img src="@firstCar.ImageUrl" class="d-block w-100" alt="@firstCar.Brand @firstCar.Model">
                        <div class="carousel-caption d-none d-md-block">
                            <h5><a class="btn btn-info" asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id">@firstCar.Brand @firstCar.Model (@firstCar.Year)</a></h5>
                            @*<p>Some representative placeholder content for the first slide.</p>*@
                        </div>
                    </div>
                }
                @if (secondCar != null)
                {
                    <div class="carousel-item">
                        <img src="@secondCar.ImageUrl" class="d-block w-100" alt="@secondCar.Brand @secondCar.Model">
                        <div class="carousel-caption d-none d-md-block">
                            <h5><a class="btn btn-info" asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id">@secondCar.Brand @secondCar.Model (@secondCar.Year)</a></h5>
                            @*<p>Some representative placeholder content for the second slide.</p>*@
                        </div>
                    </div>
                }
                @if (secondCar != null)
                {
                    <div class="carousel-item">
                        <img src="@thirdCar.ImageUrl" class="d-block w-100" alt="@thirdCar.Brand @thirdCar.Model">
                        <div class="carousel-caption d-none d-md-block">
                            <h5><a class="btn btn-info" asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id">@thirdCar.Brand @thirdCar.Model (@thirdCar.Year)</a></h5>>
                            @*<p>Some representative placeholder content for the second slide.</p>*@
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }
</div>

<div class="container mt-3 p-4 bg-primary text-white rounded">   
    <div class="row">

        <div class="col-md-4 text-center">
            @Model.TotalCars Total Cars
        </div>
        <div class="col-md-4 text-center">
            @Model.TotalUsers Total Users
        </div>
        <div class="col-md-4 text-center">
            @Model.TotalRents Total Rents
        </div>
    
    </div>
</div>




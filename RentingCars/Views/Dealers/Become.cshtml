@model BecomeDealerFormModel

@{
    ViewData["Title"] = "Create Dealer";
}

<div class="container">
    <div class="row">
        <div class="offset-lg-2 col-sm-12 col-lg-8 offset-lg-3 col-xl-6">

            <h2 class="heading-margin text-center">Become dealer</h2>

            <div asp-validation-summary="All"></div>
            
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control"> 
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary heading-margin">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
